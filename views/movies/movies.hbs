<h1 class="font-weight-normal">Search for a movie!</h1>


<div class="input-group mb-3">
    <form action="/movies/list" method="POST">
        <div class="form-group">
            <input id="searchbar" type="text" name="searchInput" placeholder="Search movies...">
        </div>
        <div>
            <button type="submit" id="search" class="btn btn-outline-dark">Search</button>
        </div>
</div>

<br>

<div class="row">
    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-camera-reels-fill filmIcon" fill="currentColor"
        xmlns="http://www.w3.org/2000/svg">
        <path
            d="M2.667 6h6.666C10.253 6 11 6.746 11 7.667v6.666c0 .92-.746 1.667-1.667 1.667H2.667C1.747 16 1 15.254 1 14.333V7.667C1 6.747 1.746 6 2.667 6z" />
        <path
            d="M7.404 11.697l6.363 3.692c.54.313 1.233-.066 1.233-.697V7.308c0-.63-.693-1.01-1.233-.696l-6.363 3.692a.802.802 0 0 0 0 1.393z" />
        <circle cx="3" cy="3" r="3" />
        <circle cx="9" cy="3" r="3" />
    </svg>
    <h2 class="font-weight-normal">Movies:</h2>
</div>

<div class="row">
    {{#each movies}}
    {{> moviesCard this}}
    {{/each}}
</div>
<div class="row justify-content-center">
    <div class="col-md-6">

        <h1>Register</h1>

        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="field1">Username</label>
                <input name="username" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Password</label>
                <input name="password" type="password" class="form-control" id="field2">
                <small class="form-text text-muted">Never share your password!</small>
            </div>
            <div class="form-group">
                <label for="field1">Email</label>
                <input name="email" type="email" class="form-control" id="field1">
            </div>

            <button type="submit" class="btn btn-success btn-block btn-lg">Register</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>

        <p>Already have an account? <a href="/login">Login!</a></p>
    </div>
</div>